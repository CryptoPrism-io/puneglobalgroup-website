# Copy this file to .env.local and fill in your Firebase project values
# Get these from: Firebase Console → Project Settings → General → Your apps → Web app

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=puneglobalgroup.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=puneglobalgroup
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=puneglobalgroup.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Admin email — only this email can access /admin
NEXT_PUBLIC_ADMIN_EMAIL=admin@puneglobalgroup.in
